# Get the path the the Husky script.
DIRNAME="$(dirname "$0")"
FILE="$DIRNAME/_/husky.sh"

# Exit if Husky is not installed.
if [ ! -f "$FILE" ]; then
  exit 0;
fi

# Exit if dependencies are not installed.
if [ ! -d "node_modules" ]; then
  exit 0;
fi

echo "Running pre-commit hookâ€¦";

# Run lint-staged.
npm run lint-staged
