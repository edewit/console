{
    "name": "console-e2e",
    "version": "0.0.1",
    "scripts": {
        "prestart": "../backend/setup.sh",
        "start": "npm test",
        "test": "jest --verbose",
        "test:update": "npm test -- -u",
        "lint": "eslint src test --ext .ts --max-warnings=0",
        "lint:fix": "eslint src test --ext .ts --fix",
        "check": "prettier --check **/*.ts **/*.json !coverage/** !**/package-lock.json",
        "check:fix": "prettier --write **/*.ts **/*.json !coverage/** !**/package-lock.json",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix && npm dedup && npm test && npm run lint && npm run check"
    },
    "dependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/jest": "^26.x.x",
        "@types/node": "^14.x.x",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "axios": "^0.20.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.10.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.x.x",
        "jest-junit": "^12.0.0",
        "prettier": "^2.1.2",
        "ts-jest": "^26.x.x",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0-pre.63",
        "typescript": "^4.0.3"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFiles": [
            "<rootDir>/jest.ts"
        ],
        "reporters": [
            "default",
            "jest-junit"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": [
                "./tsconfig.json"
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-use-before-define": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/no-floating-promises": [
                "error",
                {
                    "ignoreVoid": true
                }
            ],
            "no-console": "error",
            "no-process-exit": "error"
        }
    }
}
