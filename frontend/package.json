{
    "name": "console-frontend",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "@apollo/client": "^3.2.2",
        "@open-cluster-management/ui-components": "^0.1.9",
        "@patternfly/react-core": "^4.50.2",
        "@patternfly/react-table": "^4.16.20",
        "@types/react": "^16.9.50",
        "@types/react-dom": "^16.9.8",
        "@types/react-router-dom": "^5.1.5",
        "graphql": "^15.3.0",
        "graphql-tag": "^2.11.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.3",
        "typescript": "^4.0.3"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "1.17.10",
        "@graphql-codegen/introspection": "1.18.0",
        "@graphql-codegen/typescript": "1.17.10",
        "@graphql-codegen/typescript-operations": "1.17.8",
        "@graphql-codegen/typescript-react-apollo": "^2.0.7",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.0.4",
        "@testing-library/user-event": "^12.1.7",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.11.2",
        "prettier": "^2.1.2"
    },
    "scripts": {
        "start": "npm run clean && npm run generate && react-scripts start",
        "build": "npm run clean && react-scripts build",
        "clean": "rm -rf build coverage",
        "test": "npm run clean && npm run generate && react-scripts test --watchAll=false --coverage",
        "test:watch": "npm run generate && react-scripts test",
        "lint": "eslint src --ext .ts,.tsx --max-warnings=0",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "check": "prettier --check src/**/*.tsx **/*.json",
        "check:fix": "prettier --write src/**/*.tsx **/*.json",
        "generate": "graphql-codegen --config src/graphql/codegen.yml",
        "generate:watch": "graphql-codegen -w -s --config src/graphql/codegen.yml",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix && npm dedup && npm test && npm run lint && npm run check"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/*.d.ts",
            "!src/index.tsx",
            "!src/serviceWorker.ts",
            "!<rootDir>/node_modules/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        },
        "coverageReporters": [
            "text",
            "text-summary",
            "html",
            "lcov"
        ],
        "watchPathIgnorePatterns": [
            "node_modules",
            "coverage"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
